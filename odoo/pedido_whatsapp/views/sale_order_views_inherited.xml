<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_view_form_inherit_whatsapp" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.whatsapp</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_enviar_whatsapp_cotacao"
                            string="Enviar Cotação por WhatsApp"
                            type="object" class="btn-secondary"
                            invisible="state not in ['draft', 'sent']"/>

                    <button name="action_enviar_whatsapp_pdf"
                            string="Enviar PDF por WhatsApp"
                            type="object" class="btn-primary"
                            invisible="state not in ['draft', 'sent', 'sale']"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>