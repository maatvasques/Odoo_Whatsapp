<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form_inherit_whatsapp" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.whatsapp</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(sale.action_report_saleorder)d"
                        string="1. Imprimir Cotação (PDF)"
                        type="action"
                        class="btn-primary"/>

                <button name="action_open_send_pdf_wizard"
                        string="2. Enviar PDF para API"
                        type="object" class="btn-primary"/>
                
                </xpath>
        </field>
    </record>
</odoo>