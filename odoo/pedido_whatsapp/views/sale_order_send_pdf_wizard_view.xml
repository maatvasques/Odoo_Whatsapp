<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_send_pdf_wizard" model="ir.ui.view">
        <field name="name">sale.order.send.pdf.wizard.form</field>
        <field name="model">sale.order.send_pdf.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="attachment" filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                </group>
                <footer>
                    <button name="action_send_file" string="Enviar para API" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_order_send_pdf_wizard" model="ir.actions.act_window">
        <field name="name">Enviar PDF para API</field>
        <field name="res_model">sale.order.send_pdf.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>