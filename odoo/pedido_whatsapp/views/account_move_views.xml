<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_view_form_inherit_whatsapp" model="ir.ui.view">
            <field name="name">account.move.form.inherit.whatsapp</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_enviar_whatsapp_fatura_pdf"
                            string="Enviar Fatura por WhatsApp"
                            type="object" class="btn-primary"
                            invisible="state != 'posted' or move_type not in ('out_invoice', 'out_refund')"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>